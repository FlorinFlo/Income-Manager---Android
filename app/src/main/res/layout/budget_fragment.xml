<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >


       <Button
           android:id="@+id/current_balance"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:padding="10dip"
           android:text="Current balance : "
           android:textColor="@color/material_blue_grey_800"
           android:background="@drawable/mybutton"
           android:layout_marginBottom="10dp"
           android:clickable="false"
           />

        <Button
            android:id="@+id/week_incomes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="This week incomes : "
            android:textColor="@color/material_blue_grey_800"
            android:layout_below="@+id/current_balance"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="10dp"
            android:onClick="showWIncomes"
            />

        <Button
            android:id="@+id/month_incomes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="This month incomes : "
            android:textColor="@color/material_blue_grey_800"
            android:layout_below="@+id/week_incomes"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="10dp"
            android:onClick="showMIncomes"
            />

        <Button
            android:id="@+id/week_expenses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="This week expenses : "
            android:textColor="@color/material_blue_grey_800"
            android:layout_below="@+id/month_incomes"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="10dp"
            android:onClick="showWExpense"
            />

        <Button
            android:id="@+id/month_expenses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="This month expenses : "
            android:textColor="@color/material_blue_grey_800"
            android:layout_below="@+id/week_expenses"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="10dp"
            android:onClick="showMExpense"
            />

        <Button
            android:id="@+id/today_expenses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="Today expenses : "
            android:textColor="@color/material_blue_grey_800"
            android:layout_below="@+id/month_expenses"
            android:background="@drawable/mybutton"
            android:onClick="showTExpense"
            />


    </RelativeLayout>
</ScrollView>
